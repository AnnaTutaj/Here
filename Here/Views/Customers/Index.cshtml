@model IEnumerable<Here.Models.Customer>

@{
    ViewBag.Title = "Customers list";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>List of customers</h2>
<button type="button" onclick="location.href = '@Url.Action("New", "Customers", new {})'"
        class="btn btn-primary btn-sm">
    <i class="fa fa-plus"></i>
    &nbsp;Add
</button>
@if (!Model.Any())
{
    <p>Currenly we don't have any customers</p>
}
else
{
    <table id="customers" class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Membership Type</th>
                <th>Discount Rate</th>
                <th class="text-right"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var customer in Model)
            {
                <tr>
                    <td>@customer.Id</td>
                    <td>@Html.ActionLink(customer.Name, "Details", "Customers", new { id = customer.Id }, null)</td>
                    <td>@customer.MembershipType.Name</td>
                    <td>@customer.MembershipType.DiscountRate%</td>
                    <td class="text-right">
                        <button type="button" onclick="location.href='@Url.Action("Edit", "Customers" , new {id=customer.Id} )'"
                                class="btn btn-primary btn-xs">
                            <i class="fa fa-pencil"></i>
                            &nbsp;Edit
                        </button>
                        <button customer-id="@customer.Id" class="btn btn-primary btn-xs js-delete">
                            <i class="fa fa-trash-o"></i>
                            &nbsp;Delete
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
@section scripts
{
    <script>
        $(document).ready(function () {
            $("#customers .js-delete").on("click", function () {
                var btn = $(this);
                if (confirm("Are you sure you want to delete that customer?")) {
                    $.ajax({
                        url: "/api/customers/" + btn.attr("customer-id"),
                        method: "DELETE",
                        success: function () {
                            btn.parents("tr").remove();
                        }
                    });
                };
            });
        });
    </script>
}