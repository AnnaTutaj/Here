@model IEnumerable<Here.Models.Customer>

@{
    ViewBag.Title = "Customers list";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>List of customers</h2>
@if (!Model.Any())
{
    <p>Currenly we don't have any customers</p>
}
else
{
    <table class="table table-striped table-hover">
        <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Membership Type</th>
            <th>Discount Rate</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        @foreach (var customer in Model)
        {
            <tr>
                <td>@customer.Id</td>
                <td>@Html.ActionLink(customer.Name, "Details", "Customers", new {id = customer.Id}, null)</td>
                <td>@customer.MembershipType.Name</td>
                <td>@customer.MembershipType.DiscountRate%</td>
                <td>
                    <button class="btn btn-sercondary btn-xs">@Html.ActionLink("Edit", "Edit", "Customers", new { id = customer.Id }, new { style = "text-decoration:none" })</button>
                </td>

            </tr>
        }
        </tbody>
    </table>
}