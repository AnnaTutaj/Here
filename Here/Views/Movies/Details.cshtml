@model Here.Models.Movie

@{
    ViewBag.Title = Model.Name;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>
<ul>
    <li>Genre: @Model.Genre.Name</li>
    <li>CreatedAt: @Model.CreatedAt.ToShortDateString()</li>
    <li>ReleaseDate: @Model.ReleaseDate.ToShortDateString()</li>
    <li>CreatedAt: @Model.NumberInStock</li>
</ul>